<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Focused Code (Android TV remote navigation) -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#E6000000" /> <!-- Darker, more solid black -->
            <stroke android:width="2dp" android:color="#FFFFFFFF" /> <!-- White border for clear focus -->
            <corners android:radius="4dp" />
            <padding android:left="12dp" android:top="8dp" android:right="12dp" android:bottom="8dp" />
        </shape>
    </item>

    <!-- Pressed (Click) -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#CC333333" />
            <corners android:radius="4dp" />
            <padding android:left="12dp" android:top="8dp" android:right="12dp" android:bottom="8dp" />
        </shape>
    </item>

    <!-- Default -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#99000000" />
            <corners android:radius="4dp" />
            <padding android:left="12dp" android:top="8dp" android:right="12dp" android:bottom="8dp" />
        </shape>
    </item>
</selector>
