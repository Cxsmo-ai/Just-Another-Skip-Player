<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <corners android:radius="16dp" />
            <solid android:color="#9C27B0" /> <!-- Purple accent -->
            <stroke android:width="0dp" android:color="@android:color/transparent" />
            <padding android:left="12dp" android:top="6dp" android:right="12dp" android:bottom="6dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="16dp" />
            <solid android:color="#333333" />
            <stroke android:width="1dp" android:color="#666666" />
            <padding android:left="12dp" android:top="6dp" android:right="12dp" android:bottom="6dp"/>
        </shape>
    </item>
</selector>
