<?xml version="1.0" encoding="utf-8"?>
<!-- Full Netflix-style ExoPlayer control view - Complete replica -->
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Tap overlay background (semi-transparent) -->
    <FrameLayout android:id="@+id/exo_controls_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000" />

    <!-- ===== TOP BAR ===== -->
    <LinearLayout
        android:id="@+id/netflix_top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:background="@drawable/bg_gradient_top"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Back button -->
        <ImageButton
            android:id="@+id/netflix_btn_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_arrow_back_24dp"
            android:contentDescription="Back"
            android:scaleType="centerInside" />

        <!-- Title -->
        <TextView
            android:id="@+id/netflix_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:fontFamily="sans-serif-medium"
            android:singleLine="true"
            android:ellipsize="end" />

        <!-- Cast button -->
        <ImageButton
            android:id="@+id/netflix_btn_cast"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_cast_24dp"
            android:visibility="gone"
            android:contentDescription="Cast"
            android:scaleType="centerInside" />

        <!-- Episodes button (for TV shows) -->
        <ImageButton
            android:id="@+id/netflix_btn_episodes"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_list_24dp"
            android:visibility="gone"
            android:contentDescription="Episodes"
            android:scaleType="centerInside" />

    </LinearLayout>

    <!-- ===== CENTER CONTROLS ===== -->
    <LinearLayout
        android:id="@+id/exo_center_controls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <!-- Rewind 10s -->
        <FrameLayout
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginEnd="32dp">
            <ImageButton
                android:id="@+id/netflix_btn_rewind"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_netflix_button_circle"
                android:src="@drawable/ic_netflix_rewind_10"
                android:scaleType="centerInside"
                android:padding="12dp"
                android:contentDescription="Rewind 10s" />
        </FrameLayout>

        <!-- Play/Pause (Large) -->
        <FrameLayout
            android:layout_width="88dp"
            android:layout_height="88dp">
            <ImageButton
                android:id="@+id/exo_play_pause"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_netflix_button_play"
                android:scaleType="centerInside"
                android:padding="16dp"
                android:contentDescription="Play/Pause" />
            <!-- Loading spinner overlays play button -->
            <ProgressBar
                android:id="@+id/loading"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:indeterminateTint="@android:color/white" />
        </FrameLayout>

        <!-- Forward 10s -->
        <FrameLayout
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginStart="32dp">
            <ImageButton
                android:id="@+id/netflix_btn_forward"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_netflix_button_circle"
                android:src="@drawable/ic_netflix_forward_10"
                android:scaleType="centerInside"
                android:padding="12dp"
                android:contentDescription="Forward 10s" />
        </FrameLayout>

    </LinearLayout>

    <!-- ===== BOTTOM BAR ===== -->
    <LinearLayout
        android:id="@+id/exo_bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/bg_gradient_bottom">

        <!-- Progress bar row -->
        <com.brouken.player.CustomDefaultTimeBar
            android:id="@+id/exo_progress"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            app:played_color="#E50914"
            app:scrubber_color="#E50914"
            app:unplayed_color="#4DFFFFFF"
            app:buffered_color="#80FFFFFF"
            app:scrubber_enabled_size="16dp"
            app:scrubber_dragged_size="20dp"
            app:bar_height="4dp" />

        <!-- Time and controls row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Time display -->
            <LinearLayout
                android:id="@+id/exo_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/exo_position"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" / "
                    android:textColor="#80FFFFFF"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/exo_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#80FFFFFF"
                    android:textSize="14sp" />

            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <!-- Right controls -->
            <LinearLayout
                android:id="@+id/exo_basic_controls"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Speed -->
                <ImageButton
                    android:id="@+id/netflix_btn_speed"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_speed_24dp"
                    android:contentDescription="Speed"
                    android:scaleType="centerInside" />

                <!-- Audio & Subtitles -->
                <ImageButton
                    android:id="@+id/exo_subtitle"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_closed_caption_24dp"
                    android:contentDescription="Audio &amp; Subtitles"
                    android:scaleType="centerInside" />

                <!-- Settings -->
                <ImageButton
                    android:id="@+id/exo_settings"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_settings_24dp"
                    android:contentDescription="Settings"
                    android:scaleType="centerInside" />

                <!-- Fullscreen -->
                <ImageButton
                    android:id="@+id/netflix_btn_fullscreen"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_fullscreen_24dp"
                    android:contentDescription="Fullscreen"
                    android:scaleType="centerInside" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</merge>
