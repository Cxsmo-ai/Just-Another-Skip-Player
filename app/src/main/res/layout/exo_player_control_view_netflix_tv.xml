<?xml version="1.0" encoding="utf-8"?>
<!-- Netflix-style ExoPlayer control view for TV (larger, D-pad focused) -->
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Tap overlay background -->
    <FrameLayout android:id="@+id/exo_controls_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000" />

    <!-- ===== TOP BAR (TV) ===== -->
    <LinearLayout
        android:id="@+id/netflix_top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:background="@drawable/bg_gradient_top"
        android:orientation="horizontal"
        android:padding="24dp"
        android:gravity="center_vertical">

        <!-- Back button (large for TV) -->
        <ImageButton
            android:id="@+id/netflix_btn_back"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_arrow_back_24dp"
            android:contentDescription="Back"
            android:scaleType="centerInside"
            android:focusable="true" />

        <!-- Title -->
        <TextView
            android:id="@+id/netflix_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:fontFamily="sans-serif-medium"
            android:singleLine="true"
            android:ellipsize="end" />

    </LinearLayout>

    <!-- ===== CENTER CONTROLS (TV - larger) ===== -->
    <LinearLayout
        android:id="@+id/exo_center_controls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <!-- Rewind -->
        <ImageButton
            android:id="@+id/netflix_btn_rewind"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_marginEnd="48dp"
            android:background="@drawable/bg_netflix_button_circle"
            android:src="@drawable/ic_netflix_rewind_10"
            android:scaleType="centerInside"
            android:padding="16dp"
            android:contentDescription="Rewind"
            android:focusable="true"
            android:nextFocusRight="@id/exo_play_pause" />

        <!-- Play/Pause (Large) -->
        <FrameLayout
            android:layout_width="120dp"
            android:layout_height="120dp">
            <ImageButton
                android:id="@+id/exo_play_pause"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_netflix_button_play"
                android:scaleType="centerInside"
                android:padding="24dp"
                android:contentDescription="Play/Pause"
                android:focusable="true"
                android:nextFocusLeft="@id/netflix_btn_rewind"
                android:nextFocusRight="@id/netflix_btn_forward" />
            <ProgressBar
                android:id="@+id/loading"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:indeterminateTint="@android:color/white" />
        </FrameLayout>

        <!-- Forward -->
        <ImageButton
            android:id="@+id/netflix_btn_forward"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_marginStart="48dp"
            android:background="@drawable/bg_netflix_button_circle"
            android:src="@drawable/ic_netflix_forward_10"
            android:scaleType="centerInside"
            android:padding="16dp"
            android:contentDescription="Forward"
            android:focusable="true"
            android:nextFocusLeft="@id/exo_play_pause" />

    </LinearLayout>

    <!-- ===== BOTTOM BAR (TV) ===== -->
    <LinearLayout
        android:id="@+id/exo_bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:padding="24dp"
        android:background="@drawable/bg_gradient_bottom">

        <!-- Progress bar -->
        <com.brouken.player.CustomDefaultTimeBar
            android:id="@+id/exo_progress"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:focusable="true"
            app:played_color="#E50914"
            app:scrubber_color="#E50914"
            app:unplayed_color="#4DFFFFFF"
            app:buffered_color="#80FFFFFF"
            app:scrubber_enabled_size="24dp"
            app:scrubber_dragged_size="28dp"
            app:bar_height="6dp" />

        <!-- Time and controls row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Time -->
            <LinearLayout
                android:id="@+id/exo_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/exo_position"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" / "
                    android:textColor="#80FFFFFF"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/exo_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#80FFFFFF"
                    android:textSize="18sp" />

            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <!-- Controls (TV - larger) -->
            <LinearLayout
                android:id="@+id/exo_basic_controls"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/netflix_btn_speed"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_speed_24dp"
                    android:contentDescription="Speed"
                    android:scaleType="centerInside"
                    android:focusable="true" />

                <ImageButton
                    android:id="@+id/exo_subtitle"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_closed_caption_24dp"
                    android:contentDescription="Subtitles"
                    android:scaleType="centerInside"
                    android:focusable="true" />

                <ImageButton
                    android:id="@+id/exo_settings"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_settings_24dp"
                    android:contentDescription="Settings"
                    android:scaleType="centerInside"
                    android:focusable="true" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</merge>
